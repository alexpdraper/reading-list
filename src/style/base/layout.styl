html
  box-sizing: border-box

*,
*:before,
*:after
  box-sizing: inherit

body
  margin: 0
  padding: 0
  overflow-x: hidden

.container
  position: relative
  padding: 0 spacer
  width: containerWidth
  max-width: 100%
  margin: 0

// Header
.header
  width: 100%
  display: flex
  justify-content: center
  align-items: center
  padding: 30px 0 10px
  margin-bottom: 10px

// Searchbox
.search
  display: flex
  align-items: center
  padding-bottom: 10px

.search input[type="search"]
  width: 100%

// Save button
.save-button
  width: 30px
  height: 30px
  line-height: 30px
  padding: 0
  margin: 0 10px
  font-weight: bold
  border: 0
  border-radius: 50%
  text-align: center
  &:hover,
  &:focus
    cursor: pointer
    outline: none

// Settings button
.settings-button
  position: absolute
  top: spacer
  right: spacer
  width: spacer
  height: spacer
  padding: 0
  border: 0
  background-color: transparent
  &:hover,
  &:focus
    cursor: pointer
    outline: none

// Reading list
.reading-list
  margin-bottom: spacer

// Hide all read items when showing unread only
.unread-only .read
  display: none

.filter
  display: flex
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.15),
    0 1px 2px rgba(0, 0, 0, 0.05)
  border-radius: 4px
  width: 100%

  .button:first-child
    border-radius: 4px 0 0 4px

  .button:last-child
    border-radius: 0 4px 4px 0

.button
  border: 0
  flex-grow: 1
  flex-basis: 0
  text-transform: uppercase
  letter-spacing: 0.05em
  text-align: center
  line-height: 1
  padding: 8px
  &:focus,
  &:hover,
  &.active
    cursor: pointer
    outline: none
