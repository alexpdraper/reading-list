.reading-item
  border-radius: 3px
  padding: 0
  margin: 10px 0 0 0
  position: relative
  overflow: hidden
  transition: all 0.5s ease 0s

  .favicon
    position: absolute
    top: 10px
    left: 10px
    width: 36px
    height: 36px
    border-radius: 4px
    border: 1px solid #ccc
    padding: 1px

  .favicon-img
    width: 100%
    height: 100%
    border-radius: 2px
    &.error
      display: none

  .item-link
    text-decoration: none
    display: block
    width: 100%
    padding: 10px 50px 10px 56px
    min-height: 56px
    .title
      display: block
      font-weight: bold
    .host
      display: block
    span
      overflow-wrap: break-word
      @media screen and (max-width: 200px)
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden

  .delete-button
    position: absolute
    text-align: center
    font-weight: bold
    top: 5px
    right: 5px
    border-radius: 100%
    padding: 0
    width: 20px
    height: 20px
    border: 0
    background: transparent
    color: #ccc
    transform: rotateZ(0) scale(1)
    transition: transform 0.3s ease,
      box-shadow 0.5s ease
    &:hover
      cursor: pointer
      background: #ccc
      color: #fff
      transform: rotateZ(90deg) scale(2)
      box-shadow: 1px 0 1px rgba(0, 0, 0, 0.15)

  .edit-button
    position: absolute
    bottom: 10px
    right: 10px
    padding: 0
    width: 10px
    height: 10px
    border: 0
    background-color: transparent
    color: #ccc
    border-radius: 0
    margin: 0
    text-align: center
    transition: all 0.5s ease
    .edit-img
      fill: #ccc
    &:hover
      cursor: pointer
      width: 25px
      height: 25px
      bottom: -2px
      right: 4px
      background-color: #ccc
      color: #fff
      transform: scale(1.5)
      border-radius: 100%
      box-shadow: 1px 0 0px 1px rgba(0, 0, 0, 0.15)
      .edit-img
        fill: #fff

  .edit-img
    width: 10px
    height: 10px
    margin-top: 5px

  .store-button
    position: absolute
    bottom: -2px
    right: 4px
    padding: 0
    width: 25px
    height: 25px
    background-color: #ccc
    color: #fff
    transform: scale(1.5)
    border-radius: 100%
    margin: 0
    box-shadow: 1px 0 0px 1px rgba(0, 0, 0, 0.15)
    text-align: center
    .edit-img
      fill: #fff

.reading-list .reading-item.shiny
  background: linear-gradient(to right, #fa709a 0%, #fee140 100%)
  .delete-button
    color: #000
    &:focus,
    &:hover
      background: transparent
      color: #fa709a
  .item-link
    color: #000
    &:focus,
    &:hover
      color: #fee140
      background: transparent
      .favicon
        border-color: transparent
  .edit-button
    display: none
  .favicon
    border-color: transparent
  &:focus,
  &:hover
    box-shadow: 1px 3px 17px rgb(254, 225, 64, 0.9), 0px -1px 5px rgba(254, 225, 64, 0.7)

.overlay
  top: 0
  bottom: 0
  right: 0
  left: 0
  position: absolute
  background: rgba(0,0,0,.4)
  z-index: 10
  display: none

.edit-title
  background-color: #fff !important;
  position: relative
  z-index: 11
